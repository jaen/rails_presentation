//mixins

$border-radius($radius = 5px)
  -webkit-border-radius: $radius
  -moz-border-radius: $radius
  border-radius: $radius


// Drop shadows
$box-shadow($shadow = 0 1px 3px rgba(0,0,0,.25)) {
  -webkit-box-shadow: $shadow
  -moz-box-shadow: $shadow
  box-shadow: $shadow
}

$translucent-color($color = $white, $alpha = 1)
  hsla(hue($color), saturation($color), lightness($color), $alpha)

$clearfix()
  *zoom: 1
  &:before,
  &:after
    display: table
    content: ""

  &:after
    clear: both

$transition($t)
  -webkit-transition: $t
  -moz-transition: $t
  -ms-transition: $t
  -o-transition: $t
  transition: $t    

$transform($t)
  -webkit-transform: $t
  -moz-transform: $t
  -ms-transform: $t
  -o-transform: $t
  transform: $t  

//styles

body
  background: #d4d4d4 url("../images/background.png")
  font-family: sans-serif

  &.impress-enabled .step
    margin: 0
    opacity: 0.3
    $transition(opacity 1s)

  &.impress-enabled .step.active
    opacity: 1 !important

  &.impress-on-title-train,
  &.impress-on-title-card,
  &.impress-on-title-card-reverse
    &.impress-enabled .step.future
        opacity: 0
        $transition(opacity 1s)

.sub-title
  margin-bottom: 0px;

.center
  .content
    position: absolute
    top: 50%
    text-align: center
    width: 100%
  position: absolute
  top: 0px
  bottom: 0px
  left: 0px
  right: 0px

.slide
  display: block

  width: 900px
  height: 700px
  padding: 40px 60px

  background-color: white
  border: 1px solid rgba(0, 0, 0, .3)
  border-radius: 10px
  box-shadow: 0 2px 6px rgba(0, 0, 0, .1)

  color: rgb(102, 102, 102)
  text-shadow: 0 2px 2px rgba(0, 0, 0, .1)

  font-family: 'Open Sans', Arial, sans-serif
  font-size: 30px
  line-height: 36px
  letter-spacing: -1px

  & h1:not(.trains)
    margin-top: 0px
  
  & q
    display: block
    font-size: 50px
    line-height: 72px

    margin-top: 100px

  & q strong
    white-space: nowrap


letter-names = 'i' 'l' 'i2' 'k' 'e' 't' 'r' 'a' 'i3' 'n' 's'
letter-colors = #CA4321 #F58220 #FFDF05 #61BC46 #431ECA #560E9C #87009C

$letter($color)
  color: $color
  text-shadow: 0 0 .05em $translucent-color($color, .7)

.cl
  $clearfix()

#title-train
  &.past
    opacity: 0

#title-card
  .title
    text-align center
    $transform: translateZ(500px)

    h1
      font-size: 170px
      
      for l, i in letter-names
        .letter.{l}
            $letter(letter-colors[i % 7])

#whats-with-those-trains.step
  &.future.active
    opacity: 0 !important
  &.present
    opacity: 1

.title
  text-align: center;

.ruby-logo
  $transform: translate3d(0px, 0px, 650px)
  opacity: 0
  $transition(all 0.8s ease-in-out)

.present
  embed.ruby-logo
    opacity: 100
    $transform: translate3d(0px, 0px, 150px)

